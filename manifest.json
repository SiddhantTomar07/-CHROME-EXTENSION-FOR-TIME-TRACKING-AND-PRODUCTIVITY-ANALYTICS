{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.1",
  "description": "Track time spent on different websites and view productivity analytics.",
  "permissions": [
    "tabs",
    "storage",
    "history",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}